; --- Note, 'responsive.css' must come last!
stylesheets[all][] = css/menu.css
stylesheets[all][] = css/normalize.css
stylesheets[all][] = css/metro.css
stylesheets[all][] = css/style.css
stylesheets[all][] = css/design.css
